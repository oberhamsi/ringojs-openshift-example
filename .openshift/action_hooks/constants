#!/bin/bash

RINGO_APP_MAIN="${OPENSHIFT_REPO_DIR}yourapp/main.js"
RINGO_PACKAGES="${OPENSHIFT_REPO_DIR}ringojs-packages/"

RINGO_RUN="${OPENSHIFT_REPO_DIR}ringojs/bin/ringo"
RINGO_ARGS="--modules ${RINGO_PACKAGES} ${RINGO_APP_MAIN} -H ${OPENSHIFT_INTERNAL_IP} -p ${OPENSHIFT_INTERNAL_PORT}"

RINGO_PID="${OPENSHIFT_DATA_DIR}ringo.pid"
RINGO_LOG="${OPENSHIFT_LOG_DIR}ringo.log"

ANT_RUN="${OPENSHIFT_REPO_DIR}apache-ant/bin/ant"